# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=included-rwanda.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=included-rwanda
REACT_APP_FIREBASE_STORAGE_BUCKET=included-rwanda.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Backend API
REACT_APP_API_URL=http://localhost:8000

# Backend Environment Variables (api/.env)
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/included
MONGODB_URL=mongodb://localhost:27017/included
REDIS_URL=redis://localhost:6379

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# OpenAI (for AI course generation)
OPENAI_API_KEY=your_openai_api_key

# Azure Cognitive Services (Immersive Reader)
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_SUBDOMAIN=your_immersive_reader_subdomain

# Google Cloud (Speech-to-Text)
GOOGLE_CREDENTIALS_PATH=./google-credentials.json

# UserWay Accessibility Widget
USERWAY_ACCOUNT_ID=your_userway_account_id

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=8000
NODE_ENV=development
